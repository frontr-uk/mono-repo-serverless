{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/dapp",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nrwl/next:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "root": "apps/dapp",
        "outputPath": "dist/apps/dapp",
        "assets": [
          {
            "input": "apps/dapp/deploy",
            "glob": "serverless.yml",
            "output": "."
          }
        ]
      },
      "configurations": {
        "development": {},
        "production": {}
      }
    },
    "serve": {
      "executor": "@nrwl/next:server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "dapp:build",
        "dev": true
      },
      "configurations": {
        "development": {
          "buildTarget": "dapp:build:development",
          "dev": true
        },
        "production": {
          "buildTarget": "dapp:build:production",
          "dev": false
        }
      }
    },
    "export": {
      "executor": "@nrwl/next:export",
      "options": {
        "buildTarget": "dapp:build:production"
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/apps/dapp"],
      "options": {
        "jestConfig": "apps/dapp/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/dapp/**/*.{ts,tsx,js,jsx}"]
      }
    }
  },
  "tags": []
}
